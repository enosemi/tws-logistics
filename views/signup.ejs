<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/assets/css/auth.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>

    <div
      class="site-blocks-cover inner-page-cover overlay"
      style="
        background-image: url(./assets/img/ximg_4.jpg.pagespeed.ic.7vFLkPZ6gS.webp);
      "
      data-aos="fade"
      data-stellar-background-ratio="0.5"
    >
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
            <h1
              class="
                text-white
                font-weight-light
                text-uppercase
                font-weight-bold
              "
            >
              Create an Account
            </h1>
            <p class="breadcrumb-custom">
              <a href="/">Home</a> <span class="mx-2">&gt;</span>
              <span>Sign Up</span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div
        class="
          row
          align-items-center
          no-gutters
          align-items-stretch
          overlap-section
        "
      >
        <div class="col-md-12 mb-5">
          <form action="#" id="form" class="form p-5">
            <div class="row form-group">
              <div class="col-md-6 mb-3 mb-md-0">
                <label class="text-black" for="first_name">First Name *</label>
                <input
                  type="text"
                  id="first_name"
                  class="form-control"
                  required
                />
                <div class="error-cont first_name"></div>
              </div>
              <div class="col-md-6">
                <label class="text-black" for="last_name">Last Name</label>
                <input type="text" id="last_name" class="form-control" />
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="email">Email *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  required
                />
                <div class="error-cont email"></div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="password">Password *</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  required
                />
                <div class="error-cont password"></div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <input
                  type="submit"
                  value="Create Account"
                  class="btn btn-primary py-2 px-4 text-white"
                />
              </div>
            </div>

            <div>
              <span>Have an account already? <a href="/login">Log In</a></span>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="bubble">
      <span>Some text</span>
    </div>

    <%- include('./partials/footer.ejs') %> <%-
    include('./partials/scripts.ejs') %>

    <script src="/assets/js/auth.js"></script>

    <script>
      const form = document.querySelector("#form");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        document
          .querySelectorAll(`.error-cont`)
          .forEach((x) => (x.textContent = ""));
        const bubble_cont = document.querySelector(".bubble");

        // get values
        const first_name = form.first_name.value;
        const last_name = form.last_name.value;
        const email = form.email.value;
        const password = form.password.value;

        console.log(first_name, last_name, email, password);

        try {
          const res = await fetch("/signup", {
            method: "POST",
            body: JSON.stringify({
              first_name,
              last_name,
              email,
              password,
            }),
            headers: { "Content-Type": "application/json" },
          });

          const data = await res.json();
          console.log(data);

          if (data.errors) {
            Object.keys(data.errors).forEach((x) => {
              document.querySelector(`.error-cont.${x}`).textContent =
                data.errors[`${x}`];
            });
          }

          if (data.user) {
            bubble_cont.classList.add(...["active", "success"]);
            bubble_cont.querySelector("span").textContent =
              "Registeration Successful!";

            loginFunc({ email, password }).then( user => {
                setTimeout(()=> {
                    bubble_cont.classList.remove('active')
                    location.assign('/')
                }, 2000)
            })

          }
        } catch (err) {
          console.log(err);
        }
      });
    </script>
  </body>
</html>

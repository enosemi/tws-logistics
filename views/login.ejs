<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/assets/css/auth.css" />
  </head>

  <body>
    <%- include('./partials/header.ejs') %>

    <div
      class="site-blocks-cover inner-page-cover overlay"
      style="
        background-image: url(./assets/img/ximg_4.jpg.pagespeed.ic.7vFLkPZ6gS.webp);
      "
      data-aos="fade"
      data-stellar-background-ratio="0.5"
    >
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
            <h1
              class="
                text-white
                font-weight-light
                text-uppercase
                font-weight-bold
              "
            >
              Welcome back
            </h1>
            <p class="breadcrumb-custom">
              <a href="/">Home</a> <span class="mx-2">&gt;</span>
              <span>Login</span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div
        class="
          row
          align-items-center
          no-gutters
          align-items-stretch
          overlap-section
        "
      >
        <div class="col-md-12 mb-5">
          <form id="form" class="form p-5 bg-white">
            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="email">Email *</label>
                <input type="email" id="email" class="form-control" required />
                <div class="error-cont email"></div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="subject">Password *</label>
                <input
                  type="password"
                  id="password"
                  class="form-control"
                  required
                />
                <div class="error-cont password"></div>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <input
                  type="submit"
                  value="Log In"
                  class="btn btn-primary py-2 px-4 text-white"
                />
              </div>
            </div>

            <div>
              <span>Don't have an account? <a href="/signup">Sign Up</a></span>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="bubble">
      <span>Some Message</span>
    </div>

    <%- include('./partials/footer.ejs') %> <%-
    include('./partials/scripts.ejs') %>

    <script src="/assets/js/auth.js"></script>

    <script>
      const form = document.querySelector("#form");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        document
          .querySelectorAll(`.error-cont`)
          .forEach((x) => (x.textContent = ""));

        const bubble_cont = document.querySelector(".bubble");

        // get values
        const email = form.email.value;
        const password = form.password.value;

        const user = await loginFunc({
          email,
          password,
        });

        if (user) {
          bubble_cont.classList.add(...["active", "success"]);
          bubble_cont.querySelector("span").textContent = "Login Successful!";

          setTimeout(() => {
            bubble_cont.classList.remove("active");
            location.assign("/");
          }, 2000);
        }
      });
    </script>
  </body>
</html>
